<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-escposipprinter" version="0.1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>ESCPOSIPPrinter</name>
    <js-module name="ESCPOSIPPrinter" src="www/ESCPOSIPPrinter.js">
        <clobbers target="cordova.plugins.ESCPOSIPPrinter" />
    </js-module>
    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.BLUETOOTH" />
        </config-file>
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="escposipprinter">
                <param name="android-package" value="cordova.plugin.escposipprinter.escposipprinter" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/escposipprinter.java" target-dir="src/cordova.plugin.escposipprinter/escposipprinter" />
        <source-file src="src/android/ZSDK_ANDROID_API.jar" target-dir="libs"/>
    </platform>
</plugin>
