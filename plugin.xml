<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-jameslifestudio-escposprinter" version="0.1.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>escposprinter</name>
    <js-module name="escposprinter" src="www/escposprinter.js">
        <clobbers target="cordova.plugins.escposprinter" />
    </js-module>
    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.BLUETOOTH" />
        </config-file>
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="escposprinter">
                <param name="android-package" value="cordova.plugin.escposprinter.escposprinter" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/escposipprinter.java" target-dir="src/cordova.plugin.escposprinter/escposprinter" />
        <source-file src="src/android/ZSDK_ANDROID_API.jar" target-dir="libs"/>
    </platform>
</plugin>